@model Login
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<head>
    <link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />
</head>
<div class="container">
    <form class="d-flex flex-column align-items-start justify-content-center gap-8" method="post" asp-action="Login">
        <div asp-validation-summary="All" style="color: red;font-size:15px"></div>
        <div class="col-4 mb-3 each">
            <label class="title">Email</label>
            <input type="email" placeholder="Enter your email" asp-for="email" class="inpu"/>
        </div>
        <div class="col-4 mb-3 each">
            <label class="title" id="row">Password</label>
            <input type="password" placeholder="Enter your password" asp-for="password" class="inpu"/>
        </div>
        <button type="submit" class="btn btn-success mt-3 ">Submit</button>
    </form>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}