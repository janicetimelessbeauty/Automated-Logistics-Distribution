<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TradeSystemInterface</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Shared.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container1">
                <div class="navbar-nav mx-auto">
                    <a class="nav-item nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-item nav-link" asp-controller="Auth" asp-action="Register">Register</a>
                    <a class="nav-item nav-link" asp-controller="Auth" asp-action="Login">Login</a>
                    <a class="nav-item nav-link" asp-controller="Customer" asp-action="Index">Customers</a>
                    <a class="nav-item nav-link" asp-controller="Order" asp-action="Orders">Orders</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TradeSystemInterface - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
